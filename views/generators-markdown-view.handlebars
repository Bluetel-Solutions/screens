<link rel="stylesheet" href="https://build.origami.ft.com/bundles/css?modules=o-fonts@^1.6.7,o-ft-icons@^2.3.6,o-header,o-grid,o-forms,o-colors,o-buttons" />
<style>

	html, body{
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: 'metricweb',sans-serif;
		font-size: 1vw;
	}

	.full {
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
	}

	.display {
		display: flex;
		justify-content: center;
		align-content: center;
		align-items: center;
		color: #333333;
	}

	.display.dark{
		background-color: #333333;
		color: #FFF1E0;
	}

	.display .mdOutput {
		max-width: 70%;
		flex: 0 0 auto;
	}

	.corner{
		position: fixed;
		bottom: 20px;
		left: 20px;
		width: 400px;
		height: 200px;
		background-color: rgba(255,255,255,.5);
		box-shadow: 0 0 5px rgba(0,0,0,0.2);
		outline: none;
		padding: 5px;
	}

	.corner > *{
		font-size: 1em;
	}

	.mdInput > *{
		display: inline;
		clear: right;
		box-sizing: border-box;
	}

	.mdInput textarea{
		resize:none;
		width: 100%;
		min-height: 100px;
		padding: 5px;
	}

	.linkOutput{
		overflow: hidden;
		max-width: 100%;
		text-overflow: ellipsis;
		display: block;
		white-space: nowrap;
	}

	h1,h2,h3,h4,h5,h6{
		margin-bottom: 0.2em;
		font-weight: 200;
	}

	h1{
		font-size: 6em;
		margin-top: 0;
	}

	h2{
		font-size: 5.5em;
	}

	h3{
		font-size: 5em;
	}

	h4{
		font-size: 4em;
	}

	h5{
		font-size: 3.5em;
	}

	h6{
		font-size: 3em;
	}

	p, a, li{
		margin-top: 0;
		margin-bottom: 0.5em; 
		font-size: 2em;
	}

	p > *, li > *{
		font-size: 1em;
	}

	ol, ul{
		margin-bottom: 2em;
	}

</style>


	<div id="container" class="display full light">

		<div id="mdOutput" class="mdOutput"></div>
	
	</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.2.2/showdown.min.js"></script>

<script>
	
	var converter = new showdown.Converter(),
		container = document.getElementById('container'),
		mdOutput = document.getElementById('mdOutput'),	
		parameterString = decodeURIComponent(window.location.href.split('?')[1]).split('&'),
		parameters = {};

	parameterString.forEach(function(str){

		str = str.split("=");

		parameters[str[0]] = str[1];

	});

	mdOutput.innerHTML = converter.makeHtml(parameters.md);
	container.setAttribute('class', "display full o-colors-page-background " + parameters.theme);

</script>















